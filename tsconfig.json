    "target": "es2016",
    "jsx": "react-jsx",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2019"],
    "types": ["chrome-types"]
  },
  "include": [
    "popup/**/*",
    "workers/**/*"
  ]
}
